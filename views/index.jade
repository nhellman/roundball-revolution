extends layout

block content
  h1= title
  p Welcome to #{title}
  a(href="/").btn.btn-default Home
  
  if (user)
    p You are logged in as #{user.name}
      a(href="/auth/logout") Logout
  else
    p
      a(href="/auth/login") Please login
      | or 
      a(href="/auth/register") Register
        
